<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:background="?android:selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/group_single_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/default_group_avatar" />

    <TextView
        android:id="@+id/group_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/group_single_image"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/group_single_image"
        android:text="Display Name"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/group_remove_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/group_single_image"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="-15dp"
        android:text="remove members" />

    <Button
        android:id="@+id/group_add_Button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/group_single_image"
        android:layout_marginTop="-15dp"
        android:layout_toEndOf="@+id/group_single_image"
        android:text="add members" />

    <ImageButton
        android:id="@+id/group_outgoup_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/group_single_image"
        android:layout_marginEnd="16dp"
        app:srcCompat="@drawable/baseline_cancel_black_24dp" />


</RelativeLayout>