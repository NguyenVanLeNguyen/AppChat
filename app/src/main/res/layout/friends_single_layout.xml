<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friend_single_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/friend_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/friend_single_image"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/friend_single_image"
        android:text="Display Name"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/friend_single_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/friend_single_name"
        android:layout_below="@+id/friend_single_name"
        android:layout_marginTop="10dp"
        android:text="Friend default Status" />

    <ImageView
    android:id="@+id/friend_single_online_icon"
    android:layout_width="8dp"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/friend_single_name"
    android:layout_marginLeft="10dp"
    android:layout_toEndOf="@+id/friend_single_name"
    android:src="@mipmap/online_icon"
    android:visibility="invisible" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
       />

</RelativeLayout>